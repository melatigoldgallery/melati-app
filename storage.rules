rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Izinkan akses baca untuk semua pengguna
      allow read: if true;
      
      // Izinkan akses tulis dengan validasi ukuran dan tipe file
      allow write: if request.resource.size < 5 * 1024 * 1024 && // Maksimal 5MB
                    (request.resource.contentType.matches('image/.*') || 
                     request.resource.contentType == 'application/pdf');
    }
    
    // Aturan khusus untuk folder medical-certificates
    match /medical-certificates/{employeeId}/{fileName} {
      allow read: if true;
      allow write: if request.resource.size < 2 * 1024 * 1024 && // Maksimal 2MB
                    (request.resource.contentType.matches('image/.*') || 
                     request.resource.contentType == 'application/pdf');
    }
  }
}
